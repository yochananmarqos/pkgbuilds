# https://aur.archlinux.org/packages/libloot

pkgname=libloot
pkgver=0.26.1
pkgrel=1
pkgdesc="A C++ library for accessing LOOT's metadata and sorting functionality."
arch=('x86_64')
url="https://loot.github.io"
license=('GPL-3.0-only')
depends=(
  'fmt'
  'icu'
  'onetbb'
)
makedepends=(
  'boost'
  'cargo'
  'cbindgen'
  'cmake'
#  'doxygen'  # docs
#  'python-breathe'  # docs
#  'python-sphinx'  # docs
#  'python-sphinx_rtd_theme'  # docs
)
provides=('libloot.so=0')
source=("$pkgname-$pkgver.tar.gz::https://github.com/loot/libloot/archive/$pkgver.tar.gz")
sha256sums=('2f308b39ac5962081a45acd8dcb964ca7283d0783942c275a3c900627758d1a3')

build() {
  cd "$pkgname-$pkgver"
  export RUSTUP_TOOLCHAIN=stable
  cmake -B build -S . \
    -DCMAKE_BUILD_TYPE='RelWithDebInfo' \
    -DCMAKE_INSTALL_PREFIX='/usr' \
    -DLIBLOOT_BUILD_TESTS='OFF' \
    -DLIBLOOT_INSTALL_DOCS='OFF' \
    -DCMAKE_DISABLE_FIND_PACKAGE_yaml-cpp='ON' \
    -DCMAKE_SKIP_RPATH=TRUE \
    -Wno-dev
  cmake --build build

  # docs
#  sphinx-build -b html docs build/docs/html
}

#check() {
#  cd "$pkgname-$pkgver"
#  ctest --test-dir build --output-on-failure
#}

package() {
  cd "$pkgname-$pkgver"
  DESTDIR="$pkgdir" cmake --install build
}
