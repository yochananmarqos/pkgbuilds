pkgname=python-pyvirtualcam
_name=${pkgname#python-}
pkgver=0.14.0
pkgrel=1
pkgdesc="Send frames to a virtual camera from Python"
arch=('x86_64')
url="https://github.com/letmaik/pyvirtualcam"
license=('GPL-2.0-or-later')
depends=(
  'libyuv'
  'python-numpy'
  'v4l2loopback-dkms'
)
makedepends=(
  'pybind11'
  'python-build'
  'python-installer'
  'python-setuptools'
  'python-wheel'
)
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("$_name-$pkgver.tar.gz::$url/archive/refs/tags/v$pkgver.tar.gz")
sha256sums=('1873ee64d16d50633efaa5b7e0515287d48344ece837af989dd4ccfa7fdf6cb3')

prepare() {
  cd "$_name-$pkgver"
}

build() {
  cd "$_name-$pkgver"
  python -m build --wheel --no-isolation
}

package() {
  cd "$_name-$pkgver"
  python -m installer --destdir="$pkgdir" dist/*.whl
}
