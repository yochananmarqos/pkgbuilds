# http://aur.archlinux.org/packages/pymdown-extensions
pkgname=pymdown-extensions
pkgver=6.3
pkgrel=1
pkgdesc="Extensions for Python Markdown"
arch=('any')
url="http://facelessuser.github.io/pymdown-extensions"
license=('MIT')
depends=('python')
makedepends=('python-setuptools')
#checkdepends=('python-pyaml' 'python-pytest-cov' 'python-pep562')
optdepends=('python-pygments')
source=("https://pypi.org/packages/source/${pkgname:0:1}/$pkgname/$pkgname-$pkgver.tar.gz")
#source=("https://github.com/facelessuser/$pkgname/archive/$pkgver.tar.gz")
sha256sums=('cb879686a586b22292899771f5e5bc3382808e92aa938f71b550ecdea709419f')

build() {
    cd "$pkgname-$pkgver"
    python setup.py build
}

#check() {
#	cd "$pkgname-$pkgver"
#	pytest
#}

package() {
    cd "$pkgname-$pkgver"
    python setup.py install --root="$pkgdir" --optimize=1 --skip-build

    install -Dm644 LICENSE.md -t "$pkgdir/usr/share/licenses/$pkgname"
}
