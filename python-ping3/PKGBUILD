# https://aur.archlinux.org/packages/python-ping3

pkgname=python-ping3
_name=${pkgname#python-}
pkgver=5.1.5
pkgrel=1
arch=('any')
url="https://github.com/kyan001/ping3"
license=('MIT')
pkgdesc="Pure Python3 version of ICMP ping, shipped with command-line command"
depends=(
  'iproute2'
  'iputils'
  'python'
)
makedepends=(
  'python-build'
  'python-installer'
  'python-setuptools'
  'python-wheel'
)
#checkdepends=('python-pytest')
source=("https://files.pythonhosted.org/packages/source/${_name::1}/$_name/$_name-$pkgver.tar.gz")
sha256sums=('6c99bc844e0b7dbc5c9765e8b530140daf1ccd2112c99db01ab79831bd8081cd')

build() {
  cd "$_name-$pkgver"
  python -m build --wheel --no-isolation
}

#check() {
#  cd "$_name-$pkgver"
#  pytest || :
#}

package() {
  cd "$_name-$pkgver"
  python -m installer --destdir="$pkgdir" dist/*.whl

  install -Dm644 LICENSE -t "$pkgdir/usr/share/licenses/$pkgname/"
}
