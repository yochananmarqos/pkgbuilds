pkgname=inxi-gui
pkgver=0.1.5
pkgrel=1
pkgdesc="Show system information using inxi"
arch=('any')
url="https://www.linux-apps.com/p/1303949"
license=('GPL-3.0-or-later')
depends=(
  'hicolor-icon-theme'
  'inxi'
  'yad'
  'xdg-utils'
)
makedepends=('desktop-file-utils')
source=("https://ftp.nluug.nl/pub/os/Linux/distr/pclinuxos/pclinuxos/apt/pclinuxos/64bit/RPMS.x86_64/$pkgname-$pkgver-1pclos2025.x86_64.rpm")
sha256sums=('492771dba5973cb4e4f86db9933900fdf3664171d26c334515645869c8a2b815')

prepare() {

  # Rename desktop file & remove shebang
  mv -f "usr/share/applications/Inxi Gui.desktop" "usr/share/applications/$pkgname.desktop"
  sed -i '/xdg-open/d' "usr/share/applications/$pkgname.desktop"
}

package() {
  cp -a usr "$pkgdir/"
}
