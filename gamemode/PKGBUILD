pkgname=gamemode
pkgver=1.3.1
pkgrel=1
pkgdesc="A daemon/lib combo for Linux that allows games to request a set of optimisations be temporarily applied to the host OS."
arch=('x86_64')
url="https://github.com/FeralInteractive/gamemode"
license=('BSD 3-Clause License (Revised)')
depends=('polkit')
optdepends=('systemd')
makedepends=('meson' 'pkg-config' 'git')
conflicts=('gamemode-git')
source=("https://github.com/FeralInteractive/$pkgname/releases/download/$pkgver/$pkgname-$pkgver.tar.xz"{,.asc})
sha256sums=('fa0797ab61c255206ec90eec7d404b760ac92c932b6550296ced8686c532e67e'
            'SKIP')
validpgpkeys=('5AB43EC644CE6A84C39289F5048EF7331E7B6424')

build() {
	cd "$pkgname-$pkgver"
	meson build --prefix /usr -Dwith-systemd-user-unit-dir=/usr/lib/systemd/user -Dwith-pam-group=gamemode
	ninja -C build
}

package() {
	cd "$pkgname-$pkgver"
	DESTDIR=$pkgdir ninja -C build install
	install -m644 -Dt "$pkgdir/usr/share/licenses/$pkgname" LICENSE.txt
}
