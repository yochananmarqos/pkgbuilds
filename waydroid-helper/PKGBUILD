# https://aur.archlinux.org/packages/waydroid-helper

pkgname=waydroid-helper
pkgver=0.2.8
pkgrel=1
pkgdesc="GUI helper for Waydroid configuration and extensions"
arch=('any')
url="https://github.com/ayasa520/waydroid-helper"
license=('GPL-3.0-or-later')
depends=(
  'android-tools'
  'gtk4'
  'fakeroot'
  'libadwaita'
  'python'
  'python-aiofiles'
  'python-cairo'
  'python-dbus'
  'python-gobject'
  'python-httpx'
  'python-pywayland'
  'python-yaml'
  'vte4'
  'waydroid'
)
makedepends=('meson')
optdepends=('bindfs: shared folders support')  # AUR
source=("$pkgname-$pkgver.tar.gz::$url/archive/refs/tags/v$pkgver.tar.gz")
sha256sums=('9affd92d7971fe75aed0c840aface87144271e221368b4591abaa4ddc22beebc')

build() {
  arch-meson "$pkgname-$pkgver" build
  meson compile -C build
}

check() {
  meson test -C build --no-rebuild --print-errorlogs || :
}

package() {
  meson install -C build --no-rebuild --destdir "$pkgdir"
}
