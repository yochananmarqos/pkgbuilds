# https://aur.archlinux.org/packages/turnon

pkgname=turnon
_app_id="de.swsnr.$pkgname"
pkgver=2.4.0
pkgrel=1
pkgdesc="Turn on devices in your local network"
arch=('x86_64' 'aarch64')
url="https://github.com/swsnr/turnon"
license=('MPL-2.0')
depends=('libadwaita')
makedepends=(
  'blueprint-compiler'
  'cargo'
)
source=("$pkgname-$pkgver.tar.gz::$url/archive/refs/tags/v$pkgver.tar.gz")
sha256sums=('7f55d865ec5e3df82b0213e4b4ed878f98664af9229873cb76c7c04b1c17b752')

prepare() {
  cd "$pkgname-$pkgver"
  export RUSTUP_TOOLCHAIN=stable
  cargo fetch --locked --target "$(rustc -vV | sed -n 's/host: //p')"
}

build() {
  cd "$pkgname-$pkgver"
  export RUSTUP_TOOLCHAIN=stable
  export CARGO_TARGET_DIR=target
  cargo build --frozen --release

  make msgfmt
}

check() {
  cd "$pkgname-$pkgver"
  export RUSTUP_TOOLCHAIN=stable
  cargo test --frozen
}

package() {
  cd "$pkgname-$pkgver"
  make DESTPREFIX="$pkgdir/usr" install

  ln -s "/usr/bin/${_app_id}" "${pkgdir}/usr/bin/$pkgname"
}
