pkgname=tmm-git
pkgver=20180930.r3.5c45582
pkgrel=1
pkgdesc="Tiny Mod Manager: A simple console based mod manager for Linux."
arch=('any')
url="https://github.com/9d8/tmm"
license=('GPL3')
depends=('glibc')
provides=("${pkgname%-git}")
conflicts=("${pkgname%-git}")
source=('git+https://github.com/9d8/tmm.git')
sha256sums=('SKIP')

pkgver() {
	cd "$srcdir/${pkgname%-git}"
	printf "%s" "$(git describe --long --tags | sed 's/\([^-]*-\)g/r\1/;s/-/./g')"
}

build() {
	cd "$srcdir/${pkgname%-git}"
	make
}

package() {
	cd "$srcdir/${pkgname%-git}"
	install -Dm755 "build/${pkgname%-git}" "$pkgdir/usr/bin/${pkgname%-git}"
}
