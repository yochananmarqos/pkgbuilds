pkgname=inxi-gui-git
pkgver=r19.d168379
pkgrel=1
pkgdesc="Simple GUI frontend to inxi script."
arch=('any')
url="https://github.com/yochananmarqos/inxi-gui"
license=('GPL3')
depends=('yad' 'inxi')
makedepends=('git')
optdepends=('mesa-demos: view OpenGL config'
            'lsb-release: view lsb release info'
            'gksu: for root shell commands')
provides=("${pkgname%-git}")
conflicts=("${pkgname%-git}")
source=('git+https://github.com/yochananmarqos/inxi-gui')
sha256sums=('SKIP')

pkgver() {
	cd "$srcdir/${pkgname%-git}"
	printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
	cd "$srcdir/${pkgname%-git}"
	install -Dm644 inxi-gui.desktop -t "$pkgdir/usr/share/applications"
	install -d "$pkgdir/usr/share/locale"
	cp -a locale/* "$pkgdir/usr/share/locale"
	install -Dm755 "${pkgname%-git}" -t "$pkgdir/usr/bin"
}
